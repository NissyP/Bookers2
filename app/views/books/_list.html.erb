<div class="container mb-auto">
  <div class="row">

        <div class="col-lg-4">
          <div class="profile-container">
            <h2>User info</h2>
            <table class="table">
            <tr><td>name</td><td class="profile-name"><%= user.name %></td></tr>
            <tr><td>introduction</td><td class="profile-name"><%= user.introduction %></td></tr>
            <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
            </table>
            <% if user.id == current_user.id %>
              <p>
              <%= link_to edit_user_path(@user), class: "btn btn-outline-dark btn-block" do %>
              <i class="fa fa-user" aria-hidden="true"></i>
              <% end %>
              </p>
            <% end %>

            <h1>New book</h1>
            <% if book.errors.any? %>
              <%= book.errors.count %> errors prohibited this obj from being saved:
              <p><% book.errors.full_messages.each do |message| %></p>
                <%= message %>
              <% end %>
            <% end %>
            <%= form_with model: @book, local:true do |f| %>
              <h4>Title</h4>
              <%= f.text_field :title %>
              <h4>Opinion</h4>
              <%= f.text_area :body %>
              <p><%= f.submit 'Create Book' %></p>
            <% end %>

          </div>
        </div>

    <div class="col-lg-8">
    <h2>Books</h2>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
    <% books.each do |book| %>
      <tbody>
        <td><%= link_to user_path(@user.id) do %>
        <%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
        <% end %></td>
        <td>Title：<%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
        <td>Opinion：<%= book.body %></td>
      </tbody>
    <% end %>
    </table>
    </div>

  </div>
</div>
<%= paginate books %>