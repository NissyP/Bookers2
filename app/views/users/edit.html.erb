<h2>User info</h2>
            <% if @user.errors.any? %>
              <%= @user.errors.count %> errors prohibited this obj from being saved:
              <p><% @user.errors.full_messages.each do |message| %></p>
                <%= message %>
              <% end %>
            <% end %>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <label for="inputImage">Image</label>
  <p><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></p>
  <label for="inputIntroduction">Introduction</label>
  <p><%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介文"%></p>
  <%= f.submit "Update User" %>
<% end %>
</main>