<div class="container mb-auto">
  <div class="row">

<%= render 'books/list', user: @user, book: @book %>


    <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
    <% @books.each do |book| %>
      <tbody>
        <td><%= link_to user_path(book.user) do %>
        <%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
        <% end %></td>
        <td>Title：<%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
        <td>Opinion：<%= book.body %></td>
      </tbody>
    <% end %>
    </table>
    </div>

 </div>
</div>