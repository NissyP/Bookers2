<div class="profile-container">
  <h2>User info</h2>
  <table class="table">
  <tr><td>name</td><td class="profile-name"><%= @user.name %></td></tr>
  <tr><td>introduction</td><td class="profile-name">introduction <%= @user.introduction %></td></tr>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
  </table>
</div>

<%= render 'books/list', books: @books %>